<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF"
        android:foregroundTint="@color/colorAccent"
        tools:context=".Main3Activity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="1dp">


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="311dp"
                android:layout_height="37dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="608dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/colorAccent"
                android:text="Submit"
                app:layout_constraintBottom_toTopOf="@+id/bt_createpdf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:textAlignment="center"
                android:text="Network Operator Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Network Type"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Phone Type"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Mobile Network Code"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Country ISO Code"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Roaming"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="175dp"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_border"
                android:text="Mobile Model"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Button
                android:id="@+id/bt_createpdf"
                android:layout_width="311dp"
                android:layout_height="37dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/colorAccent"
                android:onClick="createPDF"
                android:text="Create Report"
                app:layout_constraintBottom_toTopOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

            <Button
                android:id="@+id/button3"
                android:layout_width="311dp"
                android:layout_height="37dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/colorAccent"
                android:onClick="sendMessage"
                android:text="SEND REPORT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.409"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_createpdf" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/my_border"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/my_border"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/tv3" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:background="@drawable/my_border"
                android:layout_marginStart="44dp"
                android:layout_marginTop="52dp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/tv4" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:background="@drawable/my_border"
                android:layout_marginStart="44dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/tv5" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:background="@drawable/my_border"
                android:layout_marginStart="44dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/tv6" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/my_border"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="142dp"
                android:layout_height="34dp"
                android:background="@drawable/my_border"
                android:layout_marginStart="44dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

